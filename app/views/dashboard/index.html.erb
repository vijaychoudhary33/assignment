<div class="container mx-auto text-center">
  <%Tweet.all.reverse.each do |tweet|%>
            <div class="py-4 px-2">
              <div class="d-flex align-items-center">
                <div class="flex-shrink-0 me-3">
                  <%# <%= image_tag tweet.user.avatar, size: "48x48", class: "rounded-circle" %>
                </div>
                <div class="flex-grow-1">
                  <p>@<%= tweet.user.email %> . <%= tweet.created_at.strftime("%b %-d") %></p>
                  <p class="mb-0"><%= tweet.body %></p>
                  <%# <%= image_tag tweet.image, size: "250", class: "rounded" if tweet.image.attached? %>
                    <div>
                      <ul>
                        <li><%= link_to "Edit", edit_tweet_path(tweet) %></li>
                        <li><%= link_to "Destroy", tweet_path(tweet), data: {
                                          turbo_method: :delete,
                                          turbo_confirm: "Are you sure?"
                                        } %></li>
                      </ul>
                    </div>
                  <div class="d-flex justify-content-evenly">
                    <%= link_to "#", class: "text-decoration-none text-black " do %>
                      <span>Views</span>
                    <% end %>	
                    <%= link_to "#", class: "text-decoration-none text-black " do %>
                      <span>Likes</span>
                    <% end %>	
                    <%= link_to "#", class: "text-decoration-none text-black " do %>
                      <span>Retweets</span>
                    <% end %>	
                    <%= link_to "#", class: "text-decoration-none text-black " do %>
                      <span>Comments</span>
                    <% end %>	
                  </div>
                </div>
              </div>	
            </div>
          <% end %>
          
</div>


