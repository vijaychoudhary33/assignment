<%= form_with(model: @tweet, url: tweet_path(@tweet), method: :patch, local: true, html: { multipart: true, class: 'edit-tweet-form', 'data-tweet-id' => @tweet.id }) do |form| %>
  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_field :body, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Update', class: 'btn btn-primary' %>
  </div>
<% end %>
